<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_correctores"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/press_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbTituloCorrectores"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Halcón 50 WG"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/lbDetailCorrectores"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lbTituloCorrectores"
                android:text="Muestra absorción gradual en las hojas. Es sistémico vía xilema, siendo transportado acropetalmente y de forma translaminar dentro de las hojas. Debido a este particular modo de acción debe ser aplicado de manera preventiva."/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>